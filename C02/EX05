#include <stdio.h>

int	ft_str_is_uppercase(char *str)
{
	int	i;

	i = 0;
	while (str[i])
	{
		if (str[i] < 'A' || str[i] > 'Z')
		{
			return (0);
		}
		i++;
	}
	return (1);
}

int	main(void)
{
	int	r;

	r = ft_str_is_uppercase("asdf");
	printf("Respuesta: %d\n", r);
	return (0);
}
